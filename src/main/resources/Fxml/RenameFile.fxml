<AnchorPane styleClass="main_container" stylesheets="@../Styles/RenameFiles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.whiterustphotography.sports.Controllers.RenameFilesController">
